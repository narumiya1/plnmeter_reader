<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain_addresss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/line_cardview"
    android:padding="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llMetr"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id  "
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rvUserAddtressId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt"
                android:text=" : "
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rTextMeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rvUserAddtressId"
                android:text="Meter : "
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/rMeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rTextMeter"
                android:text="1999"
                android:textColor="#000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txtrClassify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ("
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rClassify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rMeter"
                android:layout_toRightOf="@+id/txtrClassify"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtrIdentifiy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtrClassify"
                android:text=" , "
                android:textColor="#000"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/rIdentify"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/rClassify"
                android:layout_toRightOf="@+id/txtrIdentifiy"
                android:text="87,87"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtrClsassify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textSize="18sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/llImagehistoryfbase"
            android:layout_toRightOf="@id/llMetr"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/imgeFromRoom"
                android:layout_width="31dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/metr" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llMetr"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="6dp"
            android:gravity="bottom|right"
            android:text="21-21-21"
            android:textSize="11sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>