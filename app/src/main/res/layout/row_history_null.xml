<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMain_addresss"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="2dp"
    android:background="@drawable/bg_gradient"
    android:padding="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:background="@drawable/bg_gradient"
        android:id="@+id/tlMetr"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llMetr2"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id  "
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rvUserAddtressId2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt"
                android:text=" : "
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rvUserAddtressId"
                android:text="Status : "
                android:textColor="#000"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_baseline_done_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/llMetr2"
            android:id="@+id/llImage"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/imgvx"
                android:visibility="invisible"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/llMetr2"
                android:layout_width="40dp"
                android:src="@drawable/metr"
                android:layout_height="40dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txtDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llImage"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:gravity="bottom|right"
            android:text="21-21-21"
            android:textSize="11sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>